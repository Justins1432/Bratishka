<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="12dp"
    android:padding="5dp"
    android:id="@+id/productId">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/showProduct"
         android:layout_width="match_parent"
         android:layout_height="260dp"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_marginTop="5dp">

          <ImageView
              android:id="@+id/imageViewProduct"
              android:layout_width="118dp"
              android:layout_height="118dp"
              android:layout_gravity="bottom|center_horizontal"
              android:layout_marginTop="5dp"
              android:scaleType="centerCrop"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <ImageView
              android:id="@+id/addProductBasket"
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_gravity="bottom|right"
              android:layout_marginRight="5dp"
              android:layout_marginBottom="119dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:srcCompat="@drawable/add_basket_icon" />

          <TextView
              android:id="@+id/priceProduct"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="2dp"
              android:layout_marginBottom="25dp"
              android:text="@string/price"
              android:textColor="@color/black"
              android:textSize="18sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.644" />

          <TextView
              android:layout_width="25dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="2dp"
              android:layout_marginBottom="25dp"
              android:text="@string/roubles"
              android:textColor="@color/black"
              android:textSize="18sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@+id/priceProduct"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.644" />

          <TextView
              android:id="@+id/ratingProduct"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_marginEnd="25dp"
              android:layout_marginBottom="99dp"
              android:text="@string/rating_product"
              android:textAlignment="center"
              android:textColor="@color/black"
              android:textSize="14sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent" />

          <ImageView
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="109dp"
              android:src="@drawable/rating_product"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent" />

          <TextView
              android:id="@+id/typeProduct"
              android:layout_width="0dp"
              android:layout_height="30dp"
              android:layout_marginStart="2dp"
              android:layout_marginBottom="65dp"
              android:text="@string/name_product"
              android:textColor="@color/black"
              android:textSize="12sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent" />

          <TextView
              android:id="@+id/descriptionProduct"
              android:layout_width="0dp"
              android:layout_height="45dp"
              android:layout_marginStart="2dp"
              android:layout_marginBottom="15dp"
              android:text="@string/description_product"
              android:textColor="@color/black"
              android:textSize="12sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent" />

     </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>